<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="MagoArab_PhoneMailer::config" title="MagoArab PhoneMailer Section" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Customer::customer">
                    <resource id="MagoArab_PhoneMailer::customer" title="MagoArab PhoneMailer Customer Tools" sortOrder="50">
                        <resource id="MagoArab_PhoneMailer::whatsapp" title="WhatsApp Notifications" sortOrder="10" />
                        <resource id="MagoArab_PhoneMailer::customer_email" title="Email Management" sortOrder="20" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::marketing">
                    <resource id="MagoArab_PhoneMailer::marketing" title="MagoArab PhoneMailer Marketing" sortOrder="50">
                        <resource id="MagoArab_PhoneMailer::templates" title="Notification Templates" sortOrder="10" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>